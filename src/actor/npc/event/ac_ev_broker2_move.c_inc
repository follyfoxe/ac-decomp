static void aEBR2_init_proc(EV_BROKER2_ACTOR* broker2, int action) {
    static aEBR2_INIT_PROC init_proc[] = {
        // clang-format off
        aEBR2_set_stop_spd,
        aEBR2_set_walk_spd,
        aEBR2_set_walk_spd,
        aEBR2_set_run_spd,
        aEBR2_set_run_spd,
